<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_value_big"
        android:layout_marginStart="@dimen/margin_value_big"
        android:textColor="@color/red"
        android:textSize="@dimen/std_text_size_normal"
        android:text="-100"/>

    <TextView
        android:id="@+id/tv_remark"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_value_big"
        android:layout_marginStart="@dimen/margin_value_big"
        android:layout_marginRight="@dimen/margin_value_big"
        android:layout_marginEnd="@dimen/margin_value_big"
        android:gravity="end"
        android:textColor="@android:color/black"
        android:textSize="@dimen/std_text_size_normal"
        android:text="Food"/>
</LinearLayout>